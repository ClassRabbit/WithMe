<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorButtonChoice"
    tools:context="com.mju.hps.withme.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        >

        <EditText
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/login_input_mail"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:textColorHint="#C0C0C0"
            android:textColor="#000000"
            android:paddingLeft="10sp"
            android:background="@drawable/textview_border"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:id="@+id/login_input_password"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:paddingLeft="10sp"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:background="@drawable/textview_border"
            android:layout_below="@+id/login_input_mail"/>

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/whitelogo"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_below="@+id/login_input_password">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button_login"
                android:background="#25282e"
                android:text="로 그 인 하 기"
                android:layout_weight="1"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button_signup"
                android:background="#25282e"
                android:text="가 입 하 기"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:onClick="sign_up"
                android:layout_marginLeft="10dp"
                android:elevation="0sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
