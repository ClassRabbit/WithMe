<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mju.hps.withme.SignupActivity">
    
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/ic_launcher"
    android:id="@+id/imageView"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
    
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="input your id"
    android:ems="10"
    android:layout_marginTop="19dp"
    android:id="@+id/user_id_sign_up"
    android:layout_below="@+id/imageView"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/colorBackgroundStandard"
    />
    
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:hint="input your password"
    android:ems="10"
    android:id="@+id/user_pwd_sign_up"
    android:layout_below="@+id/user_id_sign_up"
    android:layout_alignStart="@+id/user_id_sign_up"
    android:backgroundTint="@color/colorBackgroundStandard"
    />
    
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:hint="input your name"
    android:ems="10"
    android:id="@+id/user_name_sign_up"
    android:layout_below="@+id/user_pwd_sign_up"
    android:layout_alignStart="@+id/user_pwd_sign_up"
    android:backgroundTint="@color/colorBackgroundStandard"
    />
    
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="phone"
    android:ems="10"
    android:hint="input your phone number"
    android:id="@+id/user_phone_sign_up"
    android:layout_below="@+id/user_name_sign_up"
    android:layout_alignStart="@+id/user_name_sign_up"
    android:backgroundTint="@color/colorBackgroundStandard"
    />
    
    <RadioButton
    android:text="Woman"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gender_woman"
    android:layout_below="@+id/user_phone_sign_up"
    android:layout_alignStart="@+id/user_phone_sign_up"
    />
    
    <RadioButton
    android:text="Man"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gender_man"
    android:layout_below="@+id/user_phone_sign_up"
    android:layout_alignStart="@+id/imageView"
    android:layout_marginStart="25dp" />
    
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="date"
    android:hint="input your birth day"
    android:ems="10"
    android:id="@+id/user_birth_sign_up"
    android:layout_below="@+id/gender_woman"
    android:layout_alignStart="@+id/gender_woman"
    android:backgroundTint="@color/colorBackgroundStandard"
    />
    
    <Button
    android:text="Button"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/user_birth_sign_up"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="14dp"
    android:id="@+id/sign_up"
    android:background="@color/colorButtonChoice"/>
    
</RelativeLayout>