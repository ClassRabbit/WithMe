<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mju.hps.withme.SignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/user_mail"
        android:text="Mail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/input_user_mail"
        android:hint="input user mail"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="15dp"
        android:text="Password"
        android:id="@+id/user_pwd" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="40dp"
        android:id="@+id/input_user_pwd"
        android:hint="input user password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="110dp"
        android:layout_height="15dp"
        android:id="@+id/user_phone"
        android:text="Phone Number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="135dp"
        android:id="@+id/input_user_phone"
        android:hint="input user phone"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="175dp"
        android:layout_height="15dp"
        android:id="@+id/user_name"
        android:text="User Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="190dp"
        android:id="@+id/input_user_name"
        android:hint="input user name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="285dp"
        android:layout_height="15dp"
        android:id="@+id/user_gender"
        android:text="User Gender" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:id="@+id/input_user_gender"
        android:hint="input user gender" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="340dp"
        android:layout_height="15dp"
        android:id="@+id/user_birth"
        android:text="User birth" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="355dp"
        android:layout_height="40dp"
        android:id="@+id/input_user_birth"
        android:hint="input user birth" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/button"
        android:onClick="createUser"
        android:layout_below="@+id/input_user_birth"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
