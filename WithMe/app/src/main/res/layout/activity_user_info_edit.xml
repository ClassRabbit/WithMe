<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mju.hps.withme.UserInfoEditActivity">

    <ImageView
        android:layout_width="100sp"
        android:src="@drawable/user_information"
        android:id="@+id/user_profile"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_profile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22sp"
        android:id="@+id/user_info_table">

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E-mail"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8dp"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="in E-mail address"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"
                android:id="@+id/user_info_edit_email"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="in Name"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"
                android:id="@+id/user_info_edit_name"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Birthday"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="in Birthday"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"
                android:id="@+id/user_info_edit_birth"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gender"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="in Gender"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"
                android:id="@+id/user_info_edit_gender" />

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PhoneNumber"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="in PhoneNumber"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"
                android:id="@+id/user_info_edit_phone"/>

        </TableRow>

    </TableLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="Edit Complete"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106sp" />

</RelativeLayout>
