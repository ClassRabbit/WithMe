<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mju.hps.withme.UserInfoActivity">


    <ImageView
        android:layout_width="100sp"
        app:srcCompat="@drawable/user_information"
        android:id="@+id/user_info_profile"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_info_profile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22sp"
        android:id="@+id/user_info_table">

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E-mail"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in E-mail address"
                android:gravity="left"
                android:id="@+id/user_info_email"
                android:layout_marginBottom="1sp"
                android:padding="8sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Name"
                android:id="@+id/user_info_name"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Birthday"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Birthday"
                android:id="@+id/user_info_birth"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gender"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Gender"
                android:id="@+id/user_info_gender"
                android:gravity="left"
                android:layout_marginBottom="1sp"
                android:padding="8sp"/>

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PhoneNumber"
                android:gravity="center"
                android:layout_marginBottom="1sp"
                android:layout_marginLeft="20sp"
                android:padding="8sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in PhoneNumber"
                android:gravity="left"
                android:id="@+id/user_info_phone"
                android:layout_marginBottom="1sp"
                android:padding="8sp"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
