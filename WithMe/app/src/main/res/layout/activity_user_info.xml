<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mju.hps.withme.UserInfoActivity">


    <ImageView
    android:layout_width="100dp"
    app:srcCompat="@drawable/user_information"
    android:id="@+id/user_profile"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="14dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_profile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/user_info_table">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="E-mail"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:padding="8dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in E-mail address"
                android:gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:padding="8dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Name"
                android:gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Birthday"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:padding="8dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Birthday"
                android:gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Gender"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:padding="8dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in Gender"
                android:gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PhoneNumber"
                android:gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="70dp"
                android:padding="8dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="in PhoneNumber"
                android:gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:padding="8dp"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
