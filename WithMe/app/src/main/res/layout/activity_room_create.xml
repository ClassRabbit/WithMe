<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20sp"
    tools:context="com.mju.hps.withme.RoomCreateActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="제목"
                android:id="@+id/room_context"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            >

            <EditText
                android:layout_weight="1"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:id="@+id/room_create_input_title"
                android:background="@drawable/textview_border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방에 대한 설명"
                android:textSize="20sp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp">

            <EditText
                android:padding="5sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="200sp"
                android:id="@+id/room_create_input_content"
                android:background="@drawable/textview_border"
                android:lines="5"
                android:minLines="3"
                android:maxLines="10"
                android:scrollbars="vertical"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="룸메이트는 최대 몇명?"
                android:textSize="20sp"
                />

            <Spinner
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:id="@+id/number_of_roommate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </Spinner>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            >

            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="위치 선택"
                android:onClick="input_map"
                android:background="@color/colorBackgroundStandard" />

            <TextView
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectedLocation"
                android:background="@drawable/textview_border" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진을 선택해주세요."
                android:onClick="select_photo"
                android:background="@color/colorBackgroundStandard"/>

        </TableRow>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/photos_recycler_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:layout_alignParentEnd="true" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp" >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방 만들기"
                android:onClick="create_room"
                android:background="@color/colorButtonChoice"
                android:id="@+id/room_create_create_button"
                android:layout_centerHorizontal="true" />

        </TableRow>
    </TableLayout>


</ScrollView>
