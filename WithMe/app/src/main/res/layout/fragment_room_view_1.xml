<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/textview_border"
            android:id="@+id/room_title_info"
            android:layout_below="@+id/photos_recycler_view_info"/>

        <TextView
            android:id="@+id/room_content"
            android:text="방 정보"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_title_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_content"
            android:background="@drawable/textview_border"
            android:id="@+id/room_content_info" />

        <TextView
            android:id="@+id/room_address"
            android:text="방 주소"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_content_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_address"
            android:background="@drawable/textview_border"
            android:id="@+id/room_address_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/room_people_num"
            android:text="방 인원 수"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_below="@id/room_address_info"/>

        <TextView
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/room_recent_people"
            android:layout_below="@+id/room_people_num"
            android:layout_marginLeft="10sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/room_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textSize="20sp"
            android:layout_below="@+id/room_people_num"
            android:layout_toRightOf="@+id/room_recent_people"/>

        <TextView
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/room_people_all"
            android:textSize="20sp"
            android:layout_below="@+id/room_people_num"
            android:layout_toRightOf="@+id/room_divide"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/photos_recycler_view_info"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="98dp" />

        //방 인원 limit +1 해줘야함

    </RelativeLayout>
</ScrollView>
