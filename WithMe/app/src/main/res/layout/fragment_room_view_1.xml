<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/room_title"
            android:text="방 제목"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/textview_border"
            android:id="@+id/room_title_info"
            android:layout_below="@+id/room_title"/>

        <TextView
            android:id="@+id/room_content"
            android:text="방 정보"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_title_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_content"
            android:background="@drawable/textview_border"
            android:id="@+id/room_content_info" />

        <TextView
            android:id="@+id/room_address"
            android:text="방 주소"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_content_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_below="@+id/room_address"
            android:background="@drawable/textview_border"
            android:id="@+id/room_address_info" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/photos_recycler_view_info"
            android:layout_below="@+id/room_photo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="98dp" />

        <TextView
            android:id="@+id/room_photo"
            android:text="방 사진"
            android:textSize="20sp"
            android:layout_below="@+id/room_address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp" />

    </RelativeLayout>
</ScrollView>
