<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mju.hps.withme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <service android:name=".service.FcmMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.FcmInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.TimeService">
            <intent-filter>
                <action android:name="com.mju.hps.withme.TimeService" />
            </intent-filter>
        </service>

        <receiver
            android:name=".receiver.WithMeReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.mju.hps.withme.reciver.createUserFail" />
                <action android:name="com.mju.hps.withme.reciver.createUserSuccess" />
                <action android:name="com.mju.hps.withme.reciver.loginSuccess" />
                <action android:name="com.mju.hps.withme.reciver.loginFail" />
                <action android:name="com.mju.hps.withme.reciver.loginError" />
            </intent-filter>
        </receiver>

        <activity android:name=".SubActivity" />
        <activity android:name=".SubActivity2" />

        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity">
        </activity>

        <activity android:name=".SignupActivity"></activity>
    </application>

</manifest>